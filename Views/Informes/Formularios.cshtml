@model string
@{
    ViewBag.Title = "Formularios";
    Layout = "~/Shared/_Layout";
}

<h2>Formularios</h2>
<div class="container">

    <form action="Formularios" method="post" class="form-horizontal">
        @Html.AntiForgeryToken()

        <div class="row">
            <input type="hidden" name="informe" value="@Model" />
            <div class="col-md-12">
                @if (Model == "EmpleadosActivos")
                {
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Nombre:
                        </label>
                        <div class="col-md-10">
                            <input type="text" name="busq" class="form-control" />

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Departamento:
                        </label>
                        <div class="col-md-10">
                            @Html.DropDownList("IdDpto", (SelectList)ViewBag.Dptos, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                }

                @if (Model == "EntradasEmpleados" || Model == "SalidasEmpleados" || Model == "Nomina")
                {
                    <div class="form-group">
                        <label class="control-label">
                            Mes:
                        </label>
                        <select name="mes" class="form-control">
                            <option value="1">Enero</option>
                            <option value="2">Febrero</option>
                            <option value="3">Marzo</option>
                            <option value="4">Abril</option>
                            <option value="5">Mayo</option>
                            <option value="6">Junio</option>
                            <option value="7">Julio</option>
                            <option value="8">Agosto</option>
                            <option value="9">Septiembre</option>
                            <option value="10">Octubre</option>
                            <option value="11">Noviembre</option>
                            <option value="12">Diciembre</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            Anio:
                        </label>
                        <input type="number" name="anio" class="form-control" />
                    </div>
                }
                @if (Model == "PermisosEmpleados")
                {
                    <div class="form-group">
                        <label class="control-label">Empleado</label>
                        <div class="col-md-10">
                            @Html.DropDownList("IdEmpleado", (SelectList)ViewBag.Empleados, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>

                }
            </div>

        </div>

        <button type="submit" class="btn btn-primary">
            Filtrar
        </button>

    </form>
</div>
